<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
</head>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Phudu:wght@900&display=swap" rel="stylesheet">
<link href="/css/signup.css" rel="stylesheet" type="text/css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<body>
    <div class="wrapper">
        <div class="container">
            <div class="box">
              <span class="borderline"></span>
              <form>
                <h2>Sign Up</h2>
                <div class="inputbox">
                  <input type="text" required="required" name="Username">
                  <span>Username</span>
                  <i></i>
                </div>
                <div class="inputbox">
                    <input type="email" required="required" name="Email">
                    <span>Email</span>
                    <i></i>
                  </div>
                  <div class="inputbox">
                    <input type="password" required="required" name="password">
                    <span>password</span>
                    <i></i>
                  </div>                        
                  <div class="inputbox">
                      <input type="password" required="required" name="conformpassword">
                      <span>Conform password</span>
                      <i></i>
                    </div>
                    <% if (typeof errorMessage !== 'undefined' && errorMessage !== null) { %>
                      <div class="error-message">
                          <%= errorMessage %>
                      </div>
                  <% } %>
                <div class="links">
                  <a href="/">Login</a>
                </div>
                <div class="links">
                  <input type="checkbox" required="required">
                  <span>I have read and agreed to the <a href="#">Terms and Conditions*</a></span>
                </div>
                <input type="submit" value="Sign Up" onclick="signUpuser()">
              </form>
            </div> 
        </div>
    </div>   
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
function signUpUser() {
    $.ajax({
        url: '/register',        
        method: 'POST',      
        data: {
            username: $('#username').val(),
            email: $('#email').val(),
            password: $('#password').val(),
            conformpassword: $('#conformpassword').val(),
        },
        success: function(response) {
        // console.log("username=",username)
        // console.log("emial=",email);
        // console.log("password=",password);
        },
        error: function(error) {
            // Handle errors (e.g., display an error message)
        }
    });
}
  </script>
</html>